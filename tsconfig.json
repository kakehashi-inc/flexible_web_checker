{
    "compilerOptions": {
        "target": "es5",
        "module": "ES2022",
        "moduleResolution": "node",
        "sourceMap": true,
        "noImplicitAny": false,
        "strict": false,
        "noImplicitThis": true,
        "esModuleInterop": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "forceConsistentCasingInFileNames": true,
        "baseUrl": ".",
        "jsx": "react-jsx",
        "paths": {
            "@/*": ["frontend/ts/*"],
        },
        "typeRoots": [
            "./node_modules/@types",
            "./frontend/ts/@types"
        ]
    },
    "include": [
        "frontend/ts/**/*.ts",
        "frontend/ts/**/*.d.ts",
        "frontend/ts/**/*.tsx",
    ]
}
